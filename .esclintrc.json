{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",             
      "no-debugger": "error",           
      "no-unused-vars": ["warn", {      
        "vars": "all",
        "args": "none"
      }],

      "eqeqeq": "error",                
      "curly": "error",                 
      "no-eval": "error",               
      "no-implied-eval": "error",         
      
      "no-undef": "error",              
      
      "indent": ["error", 2],           
      "quotes": ["error", "single"],    
      "semi": ["error", "always"],      
      "comma-dangle": ["error", "never"], 
      
      "prefer-const": "error",          
      "arrow-spacing": ["error", {      
        "before": true,
        "after": true
      }],
      "no-var": "error"                 
    }
  }
  