{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm watch",
            "type": "npm",
            "script": "watch",
            "isBackground": true,
            "problemMatcher": {
                "owner": "npm",
                "pattern": [
                    {
                        "regexp": "^\\s*([\\d\\w]+): (.*)$",
                        "file": 1,
                        "message": 2
                    }
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
